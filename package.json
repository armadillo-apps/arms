{
  "name": "arms",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "axios": "^0.19.0",
    "husky": "^4.2.3",
    "moment": "^2.24.0",
    "prop-types": "^15.7.2",
    "query-string": "^6.11.0",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-modal": "^3.9.1",
    "react-router-dom": "^5.1.2",
    "react-scripts": "^3.4.0",
    "react-toast-notifications": "^2.4.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "lint": "eslint src --max-warnings 0",
    "test": "react-scripts test --env=jest-environment-jsdom-sixteen",
    "test:coverage": "npm test -- --coverage --watchAll=false --env=jest-environment-jsdom-sixteen",
    "test:all": "CI=true npm test src",
    "eject": "react-scripts eject",
    "cy:open": "cypress open",
    "cy:verify": "cypress verify",
    "cy:run": "cypress run --browser electron --env BACKEND_URL=$BACKEND_URL,TEST_ADMIN_PASSWORD=$TEST_ADMIN_PASSWORD",
    "cy:dev": "cypress run"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@testing-library/dom": "^7.5.1",
    "@testing-library/jest-dom": "^5.7.0",
    "@testing-library/react": "^10.0.4",
    "@testing-library/react-hooks": "^3.2.1",
    "babel-eslint": "10.0.3",
    "cypress": "^4.5.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-cypress": "^2.10.1",
    "eslint-plugin-jest": "^23.7.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.18.3",
    "faker": "^4.1.0",
    "jest-environment-jsdom-sixteen": "^1.0.3",
    "prettier": "^1.19.1"
  },
  "prettier": {
    "tabWidth": 2,
    "printWidth": 80,
    "useTabs": false,
    "singleQuote": false,
    "semi": true
  },
  "jest": {
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.js",
      "!./src/index.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 71.03,
        "functions": 72.19,
        "lines": 73.32,
        "statements": 73.23
      }
    }
  },
  "husky": {
    "hooks": {
      "post-merge": "bash ./githooks/post-merge-hook.sh",
      "pre-commit": "npm run lint",
      "pre-push": "bash ./githooks/pre-push-hook.sh"
    }
  }
}
