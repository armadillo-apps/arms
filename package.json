{
  "name": "arms",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "axios": "^0.19.0",
    "moment": "^2.24.0",
    "prop-types": "^15.7.2",
    "query-string": "^6.8.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-modal": "^3.9.1",
    "react-router-dom": "^5.0.1",
    "react-scripts": "^3.3.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "lint": "eslint src --max-warnings 1",
    "test": "react-scripts test",
    "test:coverage": "npm test -- --coverage --watchAll=false",
    "test:all": "CI=true npm test src && npm run cy:dev && npm run lint && npm run test:coverage",
    "eject": "react-scripts eject",
    "cy:open": "cypress open",
    "cy:verify": "cypress verify",
    "cy:run": "cypress run --browser electron --env backendUrl=$CYPRESS_BACKEND_URL,adminPassword=$ADMIN_PASSWORD",
    "cy:dev": "cypress run"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@testing-library/dom": "^5.2.0",
    "@testing-library/jest-dom": "^4.0.0",
    "@testing-library/react": "^8.0.5",
    "babel-eslint": "10.0.3",
    "cypress": "^3.8.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-cypress": "^2.6.0",
    "eslint-plugin-jest": "^23.0.2",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.16.0",
    "faker": "^4.1.0",
    "prettier": "^1.18.2"
  },
  "prettier": {
    "tabWidth": 2,
    "printWidth": 80,
    "useTabs": false,
    "singleQuote": false,
    "semi": true
  },
  "jest": {
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.js",
      "!./src/index.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 71.03,
        "functions": 72.19,
        "lines": 73.32,
        "statements": 73.23
      }
    }
  }
}
