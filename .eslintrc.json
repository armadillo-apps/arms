{
  "plugins": ["cypress", "prettier", "jest"],
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "jest/globals": true,
    "cypress/globals": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:jest/recommended",
    "plugin:cypress/recommended",
    "plugin:prettier/recommended"
  ],
  "rules": {
    "no-unused-vars": 0,
    "react/prop-types": 0,
    "jest/no-test-prefixes": 1,
    "react/no-unescaped-entities": 0,
    "prettier/prettier": "error"
  },
  "parser": "babel-eslint",
  "settings": {
    "react": {
      "pragma": "React",
      "version": "16.8.6"
    }
  }
}
